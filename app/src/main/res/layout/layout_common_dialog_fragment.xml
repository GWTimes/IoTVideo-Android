<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vip_tips_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/iv_dialog_bg"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="188dp"
        android:layout_marginRight="30dp"
        android:background="#FFFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text=""
        android:textStyle="bold"
        android:textColor="#323232"
        android:textSize="17sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/iv_dialog_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_dialog_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_dialog_bg" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="8dp"
        android:gravity="start|center_vertical"
        android:lineSpacingExtra="7dp"
        android:minHeight="75dp"
        android:text=" "
        android:textColor="#323232"
        android:textSize="15sp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/tv_ok"
        app:layout_constraintEnd_toEndOf="@+id/iv_dialog_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_dialog_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dialog_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_dialog_bg" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25dp"
        android:background="@color/default_button"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dialog_bg"
        app:layout_constraintEnd_toEndOf="@+id/iv_dialog_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>