<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".messagemgr.DeviceMessageActivity">

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_get_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="获取物模型"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_set_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置物模型"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_send_data_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送数据到设备"
            android:textSize="18sp"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/rb_send_data_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送数据到服务器"
            android:textSize="18sp"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/rb_get_playback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取设备回放列表"
            android:textSize="18sp"
            android:visibility="gone" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_group">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>